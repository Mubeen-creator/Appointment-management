# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration - MongoDB Atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# MongoDB Atlas specific settings
DB_NAME=your_database_name
MONGODB_ATLAS=true

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_EXPIRES=7d
COOKIE_EXPIRE=7

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration - Update with your frontend URLs
FRONTEND_URL_ONE=http://localhost:5173
FRONTEND_URL_TWO=http://localhost:5174

# Development URLs (Vite default ports)
DEV_FRONTEND_URL=http://localhost:5173
DEV_DASHBOARD_URL=http://localhost:5174

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret